{
  "name": "compapp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/compapp/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/compapp"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx build compapp && cp $(ls dist/apps/compapp/assets/*.js) dist/apps/compapp/all-components.js && cp  dist/apps/compapp/all-components.js ../intervi/public/componentes"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "compapp:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "compapp:build:development",
          "hmr": true,
          "proxyConfig": "proxy.conf.json"
        },
        "production": {
          "buildTarget": "compapp:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "compapp:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "compapp:build:development"
        },
        "production": {
          "buildTarget": "compapp:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/apps/compapp"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/compapp"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/compapp/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "compapp:build"
      }
    }
  },
  "tags": []
}
